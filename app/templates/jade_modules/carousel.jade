//- Решение под бутстрап
.carousel-holder.slide#carousel(data-ride="carousel")
  //- Indicators
  ol.carousel-indicators
    li(data-target="#carousel", data-slide-to="0").active
    li(data-target="#carousel", data-slide-to="1")
    li(data-target="#carousel", data-slide-to="2")

//- Wrapper for slides
.carousel-inner(role="listbox")
    .item.active
        img(src="", alt="")
    .carousel-caption
        |caption
    .item
        img(src="", alt="")
    .carousel-caption
        |caption

<!-- Controls -->
a.left.carousel-control(href="#carousel-example-generic", role="button", data-slide="prev")
    span.glyphicon.glyphicon-chevron-left(aria-hidden="true")
    span.sr-only
        |Previous
a.right.carousel-control(href="#carousel-example-generic", role="button", data-slide="next")
    span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
    span.sr-only
        |Next